<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="phonebook">

	<!-- delete -->
	<delete id="delete" parameterType="int">
	<![CDATA[
		delete from person
		where person_id = #{no}
		]]>
	</delete>

	<!-- selectUpdate -->
	<update id="update" parameterType="com.javaex.vo.PersonVo">
	<![CDATA[
		update person
		set name = #{name},
			hp = #{hp},
		    company = #{company}
		where person_id = #{personId}
		]]>
	</update>

	<!-- selectModifyForm -->
	<select id="personSelectModifyForm" parameterType="int" resultType="com.javaex.vo.PersonVo">
	<![CDATA[
		select  person_id personId,
				name,
        		hp,
       			company
		from person
		where person_Id = #{no}
		]]>
	</select>

	<!-- select List -->
	<select id="selectList" resultType="com.javaex.vo.PersonVo">
	<![CDATA[
		select  person_id personId,
				name,
				hp,
				company
		from person
	]]>
	</select>

	<!-- insert -->
	<insert id="insert" parameterType="com.javaex.vo.PersonVo">
		<![CDATA[
			insert into person
			values(null, #{name}, #{hp}, #{company})
		]]>
	</insert>

</mapper>